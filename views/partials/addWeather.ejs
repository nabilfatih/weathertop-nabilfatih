<form action="/weather/add" method="POST" class="mt-5">
    <div class="row">
        <div class="form-group col-xs-4 col-md-4">
            <label htmlFor="city" class="control-label">City</label>
            <input placeholder="City" type="text" class="form-control" id="city" name="city" required>
        </div>
        <div class="form-group col-xs-4 col-md-4">
            <label htmlFor="latitude" class="control-label">Latitude</label>
            <input placeholder="Latitude" type="number" class="form-control" id="latitude" name="latitude" required>
        </div>
        <div class="form-group col-xs-4 col-md-4">
            <label htmlFor="longitude" class="control-label">Longitude</label>
            <input placeholder="Longitude" type="number" class="form-control" id="longitude" name="longitude" required>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add City</button>
</form>